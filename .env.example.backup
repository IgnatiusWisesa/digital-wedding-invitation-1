# Application
PORT=3001
NODE_ENV=development

# Backend Configuration
MONGO_CONNECTION_STRING=mongodb://localhost:27017/wedding-invitation
REDIS_URL=redis://localhost:6379

# Security
TICKET_SIGNING_SECRET=your-super-secret-jwt-key-change-this-in-production
# API Key for Check-in & Admin endpoints (Simple Header: x-api-key)
CHECKIN_API_KEY=secret-checkin-key
ADMIN_API_KEY=your-admin-api-key-change-this

# Google Sheets Integration
# The ID of the Google Sheet to sync RSVPs to
GOOGLE_SHEETS_ID=your-google-sheet-id
# Path to the service account JSON or the JSON string itself
GOOGLE_SERVICE_ACCOUNT_JSON=./google-service-account.json
